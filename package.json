{
  "name": "lottery-test-task",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "yarn up && yarn run build && node dist/index.js",
    "build": "babel app --out-dir dist/app --ignore \"**/*.test.js\" && babel index.js --out-dir dist",
    "test": "mocha ./app/**/*.test.js ./app/**/**/*.test.js --compilers js:babel-core/register --require babel-polyfill || exit 0",
    "up": "knex-migrate up",
    "down": "knex-migrate down",
    "rollback": "knex-migrate rollback",
    "down-all": "knex-migrate down --to 0",
    "migration": "knex migrate:make",
    "remigrate": "npm run down-all && npm run up"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.3",
    "cron": "^1.3.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "knex": "^0.13.0",
    "knex-migrate": "^1.3.0",
    "lodash": "^4.17.4",
    "multer": "^1.3.0",
    "node-cron": "^1.2.1",
    "pg": "^7.3.0",
    "pg-promise": "^6.3.5",
    "squel": "^5.10.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "mocha": "^3.5.3",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.2"
  },
  "author": "Poline Kovalchuk",
  "license": "ISC"
}
